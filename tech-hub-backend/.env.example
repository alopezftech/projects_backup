# Entorno y logging
NODE_ENV=development                # development, production, etc.
PORT=3000                           # Puerto en el que escucha el servidor
LOG_LEVEL=debug                     # debug, info, error

# Seguridad CORS
CORS_ORIGIN=http://localhost:4200   # Origen permitido para peticiones CORS

# Azure Service Bus (Colas de trabajos asíncronos)
AZURE_SERVICE_BUS_CONNECTION_STRING=your_service_bus_connection_string
AZURE_SERVICE_BUS_QUEUE_NAME=jobs

# Azure Blob Storage (Almacenamiento de archivos/resultados grandes)
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=results

# Redis (Caché y performance)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT (Autenticación)
JWT_SECRET=your-secret-key
JWT_EXPIRES_IN=1h

# Rate Limiting (Protección contra abuso)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500

# Circuit Breaker (Resiliencia ante fallos)
CIRCUIT_BREAKER_TIMEOUT=3000
CIRCUIT_BREAKER_ERROR_THRESHOLD=80
CIRCUIT_BREAKER_RESET_TIMEOUT=10000