{
  // Editor settings
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [100, 120],
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 100,

  // Language specific settings
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.suggest.includeInlayParameterNameHints": "all",
    "editor.suggest.includeInlayPropertyDeclarationTypeHints": true,
    "editor.suggest.includeInlayFunctionParameterTypeHints": true,
    "editor.suggest.includeInlayVariableTypeHints": true
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.suggest.insertMode": "replace"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // ESLint configuration
  "eslint.validate": [
    "javascript",
    "typescript",
    "html"
  ],
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,

  // Prettier configuration
  "prettier.configPath": ".prettierrc.json",
  "prettier.ignorePath": ".prettierignore",

  // TypeScript settings
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Angular settings
  "angular.enable-strict-mode-prompt": false,
  "ng-template.typeCheck": true,

  // File associations
  "files.associations": {
    "*.component.html": "html",
    "*.component.scss": "scss"
  },

  // Files to exclude from explorer
  "files.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.angular": true,
    "**/coverage": true,
    "**/.nyc_output": true
  },

  // Search settings
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.angular": true,
    "**/coverage": true,
    "**/package-lock.json": true
  },

  // Terminal settings
  "terminal.integrated.defaultProfile.windows": "PowerShell"
}
